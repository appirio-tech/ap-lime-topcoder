.container.login-content(ng-controller="login as vm")
  div.col-xs-12.col-sm-8.col-md-6.padding-reset
    a.big-logo
      img(src="content/images/logo-landing.png")

    p.welcome Welcome back.

    .login-form
      p.form-msg Please sign in.

      .alert.alert-danger(ng-show="vm.frm.error", ng-bind="vm.frm.errorMessage")

      .clearfix

      form
        .row(ng-class="{'has-error has-feedback': vm.frm.username.error}")
          input.form-control.txt-box(type="text", placeholder="Username", ng-model="vm.frm.username.value", aria-describedby="usernameErrorStatus")
          // used ng-show workaround to hide in non error state
          span.glyphicon.glyphicon-warning-sign.form-control-feedback(aria-hidden="true", ng-show="vm.frm.username.error")
          span#usernameErrorStatus.sr-only (error)
        .row.form-group(ng-class="{'has-error has-feedback': vm.frm.password.error}")
          input.form-control.txt-box(type="password", placeholder="Password", ng-model="vm.frm.password.value", aria-describedby="passwordErrorStatus")
          // used ng-show workaround to hide in non error state
          span.glyphicon.glyphicon-warning-sign.form-control-feedback(aria-hidden="true", ng-show="vm.frm.password.error")
          span#passwordErrorStatus.sr-only (error)
        .row(rel="submit")
          a.col-xs-12.col-sm-9.pull-left.forget.padding-reset(href="#/forgotpassword") Forgot your password?
          input.col-xs-12.col-sm-3.btns.glow-btn.sign-in.mob-sign.pull-right(type="submit", value="Sign In", ng-click="vm.doLogin()", ng-show="!vm.loggingIn")
          input.col-xs-12.col-sm-3.btns.glow-btn.sign-in.mob-sign.pull-right(type="button", value="Signing In", ng-show="vm.loggingIn")
          a.col-xs-12.padding-reset.mob-register.pull-left.reg-link(href="#/register") Register?
