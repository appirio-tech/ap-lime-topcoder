.container(ng-controller="register as vm")
  .logo
    img(src="")
  div.col-xs-12(rel="welcome-msg")
    div(rel="title")
      span Welcome friend.
    div(rel="description")
      p We're happy to have you join our community.
      p Please tell us a little bit about yourself.
  div.alert.alert-danger(ng-show="vm.frm.error", ng-bind="vm.frm.errorMessage")
  form(name="frm", novalidate, ng-submit="frm.$valid && vm.doRegister()")
    div.col-xs-12.col-md-6
      div.form-group(ng-class="{'has-error has-feedback': vm.hasError('firstName')}")
          input.form-control(name="firstName", type="text", placeholder="First Name", ng-model="vm.reg.firstName", aria-describedby="firstNameErrorStatus", required)
          // used ng-show workaround to hide in non error state
          span.glyphicon.glyphicon-warning-sign.form-control-feedback(aria-hidden="true", ng-show="vm.hasError('firstName')")
          span#firstNameErrorStatus.sr-only (error)

      div.form-group(ng-class="{'has-error has-feedback': vm.hasError('lastName')}")
          input.form-control(name="lastName", type="text", placeholder="Last Name", ng-model="vm.reg.lastName", aria-describedby="lastNameErrorStatus", required)
          // used ng-show workaround to hide in non error state
          span.glyphicon.glyphicon-warning-sign.form-control-feedback(aria-hidden="true", ng-show="vm.hasError('lastName')")
          span#lastNameErrorStatus.sr-only (error)

      div.form-group(ng-class="{'has-error has-feedback': vm.hasError('handle')}")
          input.form-control(name="handle", type="text", placeholder="Username", ng-model="vm.reg.handle", aria-describedby="usernameErrorStatus", required)
          // used ng-show workaround to hide in non error state
          span.glyphicon.glyphicon-warning-sign.form-control-feedback(aria-hidden="true", ng-show="vm.hasError('handle')")
          span#usernameErrorStatus.sr-only (error)

      div.form-group(ng-class="{'has-error has-feedback': vm.hasError('age')}")
          input.form-control(name="age", type="number", placeholder="Age", ng-model="vm.frm.age", aria-describedby="ageErrorStatus", required, min="10", max="100")
          // used ng-show workaround to hide in non error state
          span.glyphicon.glyphicon-warning-sign.form-control-feedback(aria-hidden="true", ng-show="vm.hasError('age')")
          span#ageErrorStatus.sr-only (error)
    div.col-xs-12.col-md-6
      //div.form-group(ng-class="{'has-error has-feedback': vm.hasError('country')}")
          input.form-control(name="country", type="text", placeholder="Select Country", ng-model="vm.reg.country", aria-describedby="countryErrorStatus", required)
          // used ng-show workaround to hide in non error state
          span.glyphicon.glyphicon-warning-sign.form-control-feedback(aria-hidden="true", ng-show="vm.hasError('country')")
          span#countryErrorStatus.sr-only (error)
          
      div.select-options(ng-form="optionForm")
            select(
              ng-init="vm.reg.country = 'Select Country'",
              ng-model="vm.reg.country",
              ng-options="country for country in vm.frm.countries",
              required,
              name="country",
              ng-class="{required: editForm.$submitted && optionForm.select.$error.required}")

            //p.required-message(ng-show="editForm.$submitted && optionForm.select.$error.required") Required

      div.form-group(ng-class="{'has-error has-feedback': vm.hasError('email')}")
          input.form-control(name="email", type="email", placeholder="Email", ng-model="vm.reg.email", aria-describedby="emailErrorStatus", required)
          // used ng-show workaround to hide in non error state
          span.glyphicon.glyphicon-warning-sign.form-control-feedback(aria-hidden="true", ng-show="vm.hasError('email')")
          span#emailErrorStatus.sr-only (error)

      div.form-group(ng-class="{'has-error has-feedback': vm.hasError('password')}")
          input.form-control(name="password", type="password", placeholder="password", ng-model="vm.reg.password", aria-describedby="passwordErrorStatus", required)
          // used ng-show workaround to hide in non error state
          span.glyphicon.glyphicon-warning-sign.form-control-feedback(aria-hidden="true", ng-show="vm.hasError('password')")
          span#passwordErrorStatus.sr-only (error)

      div.checkbox(ng-class="{'has-error has-feedback': vm.hasError('agree')}")
          label(for="agree")
            input(name="agree", type="checkbox", ng-model="vm.frm.agree", aria-describedby="agreeErrorStatus", required)
            | Agree to terms and privacy policy
          span#agreeErrorStatus.sr-only (error)
    div.col-xs-12(rel="submit")
      input.btn.btn-primary.pull-right(type="submit", value="Register", ng-click="vm.doRegister()", ng-show="!vm.registering")
      input.btn.btn-primary.pull-right(type="button", value="Registering", ng-show="vm.registering")